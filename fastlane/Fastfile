default_platform(:ios)

# Load environment variables from .env file
Dotenv.load("fastlane/.env") if File.exist?("fastlane/.env")

platform :ios do
  # Load API key for App Store Connect operations
  def api_key
    app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_filepath: ENV["APP_STORE_CONNECT_API_KEY_PATH"]
    )
  end

  desc "Run all tests (unit + UI) on simulator"
  lane :test do
    scan(
      scheme: "Nestory-Pro",
      devices: ["iPhone 17 Pro Max"],
      clean: true,
      result_bundle: true
    )
  end

  desc "Run unit tests only (faster, for CI)"
  lane :test_unit do
    scan(
      scheme: "Nestory-Pro",
      devices: ["iPhone 17 Pro Max"],
      only_testing: ["Nestory-ProTests"],
      result_bundle: true
    )
  end

  desc "Build and upload to TestFlight"
  lane :beta do
    # Increment build number from TestFlight
    increment_build_number(
      build_number: latest_testflight_build_number(api_key: api_key) + 1,
      xcodeproj: "Nestory-Pro.xcodeproj"
    )

    # Build with Xcode automatic signing
    build_app(
      scheme: "Nestory-Pro",
      export_method: "app-store"
    )

    # Upload to TestFlight
    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true
    )
  end

  desc "Build and submit to App Store (manual gating: submit_for_review is false)"
  lane :release do
    # Ensure clean git state before release
    ensure_git_status_clean

    # Get current version for tagging
    version = get_version_number(xcodeproj: "Nestory-Pro.xcodeproj")

    # Increment build number from App Store
    new_build = app_store_build_number(api_key: api_key, live: false) + 1
    increment_build_number(
      build_number: new_build,
      xcodeproj: "Nestory-Pro.xcodeproj"
    )

    # Commit version bump
    commit_version_bump(
      xcodeproj: "Nestory-Pro.xcodeproj",
      message: "chore(release): bump build to #{new_build}"
    )

    # Build with Xcode automatic signing
    build_app(
      scheme: "Nestory-Pro",
      export_method: "app-store"
    )

    # Upload to App Store (manual review submission)
    upload_to_app_store(
      api_key: api_key,
      submit_for_review: false,
      skip_metadata: true,
      skip_screenshots: true
    )

    # Tag the release
    add_git_tag(
      tag: "v#{version}-#{new_build}",
      message: "Release v#{version} (#{new_build})"
    )

    # Push commit and tag
    push_to_git_remote(tags: true)
  end

  desc "Bump version (patch/minor/major)"
  lane :bump_version do |options|
    increment_version_number(
      bump_type: options[:type] || "patch",
      xcodeproj: "Nestory-Pro.xcodeproj"
    )
  end
end
