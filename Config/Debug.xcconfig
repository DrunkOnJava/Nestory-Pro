// Debug.xcconfig
// Debug-specific build settings
// Created for v1.1 - P1-01

#include "Common.xcconfig"

// MARK: - Debug Configuration
DEBUG_INFORMATION_FORMAT = dwarf
GCC_OPTIMIZATION_LEVEL = 0
SWIFT_OPTIMIZATION_LEVEL = -Onone
SWIFT_COMPILATION_MODE = singlefile
SWIFT_ACTIVE_COMPILATION_CONDITIONS = DEBUG $(inherited)
ENABLE_TESTABILITY = YES
ONLY_ACTIVE_ARCH = YES

// MARK: - Compiler Performance Warnings
OTHER_SWIFT_FLAGS = $(inherited) -Xfrontend -warn-long-function-bodies=100 -Xfrontend -warn-long-expression-type-checking=100

// MARK: - Debug Assertions
ENABLE_NS_ASSERTIONS = YES
GCC_PREPROCESSOR_DEFINITIONS = DEBUG=1 $(inherited)

// MARK: - Metal Debug
MTL_ENABLE_DEBUG_INFO = INCLUDE_SOURCE
MTL_FAST_MATH = YES

// MARK: - Thread Safety
ENABLE_THREAD_SANITIZER = YES
ENABLE_MAIN_THREAD_CHECKER = YES
